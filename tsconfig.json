{
  "compilerOptions": {
    "module": "commonjs",
    "noEmit": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "ES6",
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["src/*"],
    }
  },
  "include": [
    "src/**/*",
    "tools/**/*"
  ]
}